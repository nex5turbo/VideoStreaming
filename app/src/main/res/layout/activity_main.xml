<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="VideoStreaming"
            android:layout_width="243dp"
            android:layout_height="0dp"
            android:id="@+id/mainTitle"
            android:gravity="center" android:textSize="30sp"
            android:layout_marginTop="219dp"
            android:layout_marginBottom="7dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/deviceInfoTextView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/enterServerDownloadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="20dp"
            android:text="서버다운" app:layout_constraintBottom_toTopOf="@+id/enterServerStreamingButton"
            app:layout_constraintStart_toStartOf="@+id/enterClientStreamingButton" app:layout_constraintTop_toBottomOf="@+id/enterClientStreamingButton"/>
    <Button
            android:id="@+id/enterClientStreamingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:text="클라스트"
            app:layout_constraintBottom_toTopOf="@+id/enterServerDownloadButton" app:layout_constraintStart_toStartOf="@+id/enterServerStreamingButton"
            app:layout_constraintTop_toBottomOf="@+id/enterClientDownloadbutton"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deviceInfoTextView"
            app:layout_constraintTop_toBottomOf="@+id/mainTitle" android:layout_marginBottom="131dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/enterClientDownloadbutton"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/enterServerStreamingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="58dp"
            android:text="서버스트" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterServerDownloadButton"/>
    <Button
            android:id="@+id/enterClientDownloadbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="13dp"
            android:text="클라다운" app:layout_constraintBottom_toTopOf="@+id/enterClientStreamingButton"
            app:layout_constraintStart_toStartOf="@+id/enterClientStreamingButton" app:layout_constraintTop_toBottomOf="@+id/deviceInfoTextView"/>
</androidx.constraintlayout.widget.ConstraintLayout>