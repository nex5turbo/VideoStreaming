<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#00000000" tools:context=".ClientPlayerActivity">

    <VideoView
            android:id="@+id/clientVideoView"
            android:layout_width="0dp"
            android:layout_height="524dp"
            android:layout_marginBottom="53dp" app:layout_constraintBottom_toTopOf="@+id/socketButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:id="@+id/socketButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginBottom="55dp"
            android:text="소켓연결" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clientVideoView"
    />
</androidx.constraintlayout.widget.ConstraintLayout>